<UserControl
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:cal="http://www.caliburnproject.org"
		xmlns:Syncfusion="http://schemas.syncfusion.com/wpf" x:Class="IposV3.Views.V_pagomultiple_compraView"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
		xmlns:cbind="clr-namespace:CalcBinding;assembly=CalcBinding"
		xmlns:local="clr-namespace:IposV3"
            xmlns:localCommon="clr-namespace:UICommon;assembly=UICommon"
		xmlns:localCont="clr-namespace:Controls;assembly=UICommon"
		xmlns:localConv="clr-namespace:Converters;assembly=UICommon"
		xmlns:ac="clr-namespace:AdornedControl;assembly=AdornedControl"
		mc:Ignorable="d"
		Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={localConv:WindowSizeConverter}, ConverterParameter='0.75'}" 
		Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={localConv:WindowSizeConverter}, ConverterParameter='0.75'}"
		>
    <UserControl.Resources>
        <localConv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>

    <ScrollViewer  HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="20,5,20,5">
        <WrapPanel Name="MainPanel"  HorizontalAlignment="Stretch"  VerticalAlignment="Top"  >
            <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=x}"  Height="5"  >
                <localCont:MessageBoxV2 MessageToUser="{Binding MessageToUser}"  Width="10"  HorizontalAlignment="Right"/>
            </StackPanel>

            <ac:AdornedControl  IsAdornerVisible="{Binding IsBusy}">
                <ac:AdornedControl.AdornerContent>
                    <localCont:LoadingWait></localCont:LoadingWait>
                </ac:AdornedControl.AdornerContent>
                <WrapPanel  HorizontalAlignment="Stretch"  VerticalAlignment="Top"  IsEnabled="{Binding !IsBusy}">


                    <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=6*x/12.5}">
                        <Button  x:Name="Back" Style="{StaticResource MaterialDesignIconButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft"/>
                            </StackPanel>
                        </Button>
                        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}">Pago compra</TextBlock>
                    </WrapPanel>

                    <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=6*x/12.5}">

                        <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="65"  >
                            <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Total" Padding="0,0,0,0" Height="15" FontWeight="Bold"/>
                            <Syncfusion:DoubleTextBox x:Name="Total" HorizontalAlignment="Stretch"  Margin="10,0,10,0" NumberGroupSeparator="," NumberDecimalDigits="2" NumberDecimalSeparator="." TextWrapping="Wrap" Text="DoubleTextBox" Value="{Binding PagoItem.Total}" VerticalAlignment="Top"  IsScrollingOnCircle="False" IsReadOnly="True" FontWeight="Bold" TextAlignment="Right"/>
                            <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Total}"  Margin="0,0,0,0"/>
                        </StackPanel>

                        <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="65"  >
                            <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Restante" Padding="0,0,0,0" Height="15" FontWeight="Bold"/>
                            <Syncfusion:DoubleTextBox x:Name="Restante" HorizontalAlignment="Stretch"  Margin="10,0,10,0" NumberGroupSeparator="," NumberDecimalDigits="2" NumberDecimalSeparator="." TextWrapping="Wrap" Text="DoubleTextBox" Value="{Binding PagoItem.Restante}" VerticalAlignment="Top"  IsScrollingOnCircle="False" IsReadOnly="True" FontWeight="Bold" TextAlignment="Right"/>
                            <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Total}"  Margin="0,0,0,0"/>
                        </StackPanel>
                        <!--<StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=6*x/12.5}"  Height="45"  />-->

                    </WrapPanel>


                    <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}">
                        <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,20">
                            <!--<TextBlock Style="{StaticResource MaterialDesignHeadline6TextBlock}" FontWeight="Medium"  HorizontalAlignment="Stretch"  VerticalAlignment="Top">General</TextBlock>-->
                            <Border BorderThickness="0,2,0,0"  BorderBrush="LightBlue"  >
                                <WrapPanel Margin="0,10,0,0">




                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Monto Efectivo" />
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <Syncfusion:DoubleTextBox x:Name="Montoefectivo" HorizontalAlignment="Stretch"  Margin="10,0,10,0" NumberGroupSeparator="," NumberDecimalDigits="2" NumberDecimalSeparator="." TextWrapping="Wrap" Text="DoubleTextBox" Value="{Binding PagoItem.Montoefectivo}" VerticalAlignment="Top"  IsScrollingOnCircle="False" IsReadOnly="{Binding BIsReadOnly}" TextAlignment="Right" />
                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Montoefectivo}"  Margin="0,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=6*x/12.5}"  Height="45"  />



                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>

                                        <AdornerDecorator>

                                            <ComboBox  x:Name="Tipotarjeta" 
										        ItemsSource="{Binding Catalogs[SatFormaPagoTarjeta]}"
										        SelectedValuePath="Id"
										        SelectedValue="{Binding PagoItem.Tipotarjeta}"
										        DisplayMemberPath="Nombre"
										        IsReadOnly="{Binding BIsReadOnly}">
                                                <localConv:WatermarkService.Watermark>
                                                    <TextBlock Text="... Selecciona tipo de tarjeta ..." />
                                                </localConv:WatermarkService.Watermark>
                                            </ComboBox>
                                        </AdornerDecorator>

                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Tipotarjeta}"  Margin="0,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <Syncfusion:DoubleTextBox x:Name="Montotarjeta" HorizontalAlignment="Stretch"  Margin="10,0,10,0" NumberGroupSeparator="," NumberDecimalDigits="2" NumberDecimalSeparator="." TextWrapping="Wrap" Text="DoubleTextBox" Value="{Binding PagoItem.Montotarjeta}" VerticalAlignment="Top"  IsScrollingOnCircle="False" IsReadOnly="{Binding BIsReadOnly}"  TextAlignment="Right"/>
                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Montotarjeta}"  Margin="0,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>

                                        <AdornerDecorator>
                                            <ComboBox  x:Name="Bancotarjetaid" 
									            ItemsSource="{Binding Catalogs[Banco]}"
									            SelectedValuePath="Id"
									            SelectedValue="{Binding PagoItem.Bancotarjetaid}"
									            DisplayMemberPath="Nombre"
									            IsReadOnly="{Binding BIsReadOnly}">
                                                <localConv:WatermarkService.Watermark>
                                                    <TextBlock Text="... Seleccione banco tarjeta..." />
                                                </localConv:WatermarkService.Watermark>
                                            </ComboBox>
                                        </AdornerDecorator>


                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Bancotarjetaid}"  Margin="0,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <AdornerDecorator>
                                            <TextBox x:Name="Referenciatarjeta" Text="{Binding PagoItem.Referenciatarjeta}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"   >
                                                <localConv:WatermarkService.Watermark>
                                                    <TextBlock>Referencia tarjeta</TextBlock>
                                                </localConv:WatermarkService.Watermark>
                                            </TextBox>
                                        </AdornerDecorator>
                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Referenciatarjeta}"  Margin="0,0,0,0"/>
                                    </StackPanel>


                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Monto Cheque" />
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <Syncfusion:DoubleTextBox x:Name="Montocheque" HorizontalAlignment="Stretch"  Margin="10,0,10,0" NumberGroupSeparator="," NumberDecimalDigits="2" NumberDecimalSeparator="." TextWrapping="Wrap" Text="DoubleTextBox" Value="{Binding PagoItem.Montocheque}" VerticalAlignment="Top"  IsScrollingOnCircle="False" IsReadOnly="{Binding BIsReadOnly}"  TextAlignment="Right"/>
                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Montocheque}"  Margin="0,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>


                                        <AdornerDecorator>

                                            <ComboBox  x:Name="Bancochequeid" 
			                                ItemsSource="{Binding Catalogs[Banco]}"
						                    SelectedValuePath="Id"
						                    SelectedValue="{Binding PagoItem.Bancochequeid}"
						                    DisplayMemberPath="Nombre"
			                                IsReadOnly="{Binding BIsReadOnly}">
                                                <localConv:WatermarkService.Watermark>
                                                    <TextBlock Text="... Seleccione banco cheque..." />
                                                </localConv:WatermarkService.Watermark>
                                            </ComboBox>
                                        </AdornerDecorator>

                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Bancochequeid}"  Margin="0,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <AdornerDecorator>
                                            <TextBox x:Name="Referenciacheque" Text="{Binding PagoItem.Referenciacheque}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  >
                                                <localConv:WatermarkService.Watermark>
                                                    <TextBlock>Referencia Cheque</TextBlock>
                                                </localConv:WatermarkService.Watermark>
                                            </TextBox>
                                        </AdornerDecorator>
                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Referenciacheque}"  Margin="0,0,0,0"/>
                                    </StackPanel>



                                    



                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Monto Transferencia" />
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15" />
                                        <Syncfusion:DoubleTextBox x:Name="Montotransferencia" HorizontalAlignment="Stretch"  Margin="10,0,10,0" NumberGroupSeparator="," NumberDecimalDigits="2" NumberDecimalSeparator="." TextWrapping="Wrap" Text="DoubleTextBox" Value="{Binding PagoItem.Montotransferencia}" VerticalAlignment="Top"  IsScrollingOnCircle="False" IsReadOnly="{Binding BIsReadOnly}"  TextAlignment="Right"/>
                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Montotransferencia}"  Margin="0,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>


                                        <AdornerDecorator>

                                            <ComboBox  x:Name="Bancotransferenciaid" 
			                                ItemsSource="{Binding Catalogs[Banco]}"
						                    SelectedValuePath="Id"
						                    SelectedValue="{Binding PagoItem.Bancotransferenciaid}"
						                    DisplayMemberPath="Nombre"
			                                IsReadOnly="{Binding BIsReadOnly}" >
                                                <localConv:WatermarkService.Watermark>
                                                    <TextBlock Text="... Seleccione banco transf. ..." />
                                                </localConv:WatermarkService.Watermark>
                                            </ComboBox>
                                        </AdornerDecorator>

                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Bancotransferenciaid}"  Margin="0,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="0,0,0,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <AdornerDecorator>
                                            <TextBox x:Name="Referenciatransferencia" Text="{Binding PagoItem.Referenciatransferencia}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  >
                                                <localConv:WatermarkService.Watermark>
                                                    <TextBlock>Referencia transferencia</TextBlock>
                                                </localConv:WatermarkService.Watermark>
                                            </TextBox>
                                        </AdornerDecorator>
                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Referenciatransferencia}"  Margin="0,0,0,0"/>
                                    </StackPanel>





                                    


                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=2*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Observaciones" />
                                    </StackPanel>
                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3.8*x/12.5}"  Height="45"  >
                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="" Padding="0,0,0,0" Height="15"/>
                                        <TextBox x:Name="Observaciones" Text="{Binding PagoItem.Observaciones}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Observaciones}"  Margin="0,0,0,0"/>
                                    </StackPanel>











                                </WrapPanel>
                            </Border>
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="6" MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=x}">
                        <Rectangle  Width="120"/>
                        <Rectangle  Width="120"/>
                        <Button MinWidth="120" Margin="6" Padding="6"
					x:Name="Accept" Content="Ok" IsEnabled="{cbind:Binding !Screenpagoprov.HasErrors}" Foreground="WhiteSmoke"/>
                        <Rectangle  Width="120"/>
                        <Button MinWidth="120" Margin="6" Padding="6"
					x:Name="Cancel" 
					Content="Cancelar" Visibility="{cbind:Binding Path=!BIsReadOnly}" Background="LightGray"/>

                    </WrapPanel>





                </WrapPanel>
            </ac:AdornedControl>

        </WrapPanel>
    </ScrollViewer>
</UserControl>


