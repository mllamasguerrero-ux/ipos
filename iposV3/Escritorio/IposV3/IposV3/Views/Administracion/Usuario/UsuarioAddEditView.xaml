
<UserControl
        x:Class="IposV3.Views.UsuarioAddEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cal="http://www.caliburnproject.org"
        xmlns:Syncfusion="http://schemas.syncfusion.com/wpf" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:cbind="clr-namespace:CalcBinding;assembly=CalcBinding"
        xmlns:local="clr-namespace:IposV3"
            xmlns:localCommon="clr-namespace:UICommon;assembly=UICommon"
        xmlns:localCont="clr-namespace:Controls;assembly=UICommon"
        xmlns:localConv="clr-namespace:Converters;assembly=UICommon"
        xmlns:ac="clr-namespace:AdornedControl;assembly=AdornedControl"
        mc:Ignorable="d"  
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={localConv:WindowSizeConverter}, ConverterParameter='0.85'}" 
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={localConv:WindowSizeConverter}, ConverterParameter='0.75'}"
        >
    <UserControl.Resources>
        <localConv:DecimalNullableConverter x:Key="DecimalNullableConverter"/>
        <localConv:IntNullableConverter x:Key="IntNullableConverter"/>
        <localConv:DateTimeOffsetToDateTimeConverter x:Key="DateTimeOffsetToDateTimeConverter"/>
    </UserControl.Resources>


    <ScrollViewer   Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={localConv:WindowSizeConverter}, ConverterParameter='0.83'}"
                HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Padding="20,20,20,20" Margin="0 0 0 0 "  IsEnabled="{cbind:Binding Path=!IsBusy}" Opacity="{Binding Opacity}">
        <WrapPanel Name="MainPanel"  HorizontalAlignment="Stretch"  VerticalAlignment="Top"  >
            <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=x}"  Height="5"  >
                <localCont:MessageBoxV2 MessageToUser="{Binding MessageToUser}"  Width="10"  HorizontalAlignment="Right"/>
            </StackPanel>



            <ac:AdornedControl  IsAdornerVisible="{Binding IsBusy}">
             <ac:AdornedControl.AdornerContent>
                    <localCont:LoadingWait></localCont:LoadingWait>
             </ac:AdornedControl.AdornerContent>
             <WrapPanel  HorizontalAlignment="Stretch"  VerticalAlignment="Top"  IsEnabled="{cbind:Binding Path=!IsBusy}">


              <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}">

                <Button  x:Name="Back" Style="{StaticResource MaterialDesignIconButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowLeft"/>
                    </StackPanel>
                </Button>
                <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}">Usuario</TextBlock>
              </WrapPanel>



                    <TabControl Template="{DynamicResource TabControlControlTemplate1}" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}" >

                        <TabItem HorizontalAlignment="Stretch" Margin="0,0,0,10" Header="General">
                            <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=x}">
                                <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}">

                                    <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}">
                                        <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,0">
                                            <TextBlock  FontWeight="Medium"  HorizontalAlignment="Stretch"  VerticalAlignment="Top">General</TextBlock>
                                            <Border BorderThickness="0,2,0,0" BorderBrush="LightBlue"  >
                                                <WrapPanel Margin="0,10,0,0">


                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=2.4*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Nombre*" />
                                                        <TextBox x:Name="Nombre" Text="{Binding Usuario.Nombre}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Nombre}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=2.4*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Usuario Nombre*" />
                                                        <TextBox x:Name="UsuarioNombre" Text="{Binding Usuario.UsuarioNombre}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=UsuarioNombre}"  Margin="0,0,0,0"/>
                                                    </StackPanel>


                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=2.4*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Nombres" />
                                                        <TextBox x:Name="Nombres" Text="{Binding Usuario.Nombres}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Nombres}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=2.4*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Apellidos" />
                                                        <TextBox x:Name="Apellidos" Text="{Binding Usuario.Apellidos}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Apellidos}"  Margin="0,0,0,0"/>
                                                    </StackPanel>



                                                    

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.8*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Gaffete" />
                                                        <TextBox x:Name="Gaffete" Text="{Binding Usuario.Gaffete}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Gaffete}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.8*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Codigo aut." />
                                                        <TextBox x:Name="Codigoautorizacion" Text="{Binding Usuario.Codigoautorizacion}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Codigoautorizacion}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.2*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Saludo" />
                                                        <ComboBox  x:Name="Saludoid" 
			ItemsSource="{Binding Catalogs[Saludo]}"
                        
                        SelectedValuePath="Id"
                        SelectedValue="{Binding Usuario.Saludoid}"
                        DisplayMemberPath="Nombre"
 			IsReadOnly="{Binding BIsReadOnly}" />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Saludoid}"  Margin="0,0,0,0"/>
                                                    </StackPanel>


                                                    
                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.2*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Resetear Password*" HorizontalAlignment="Center" />
                                                        <CheckBox x:Name="Reset_pass"  IsChecked="{Binding Usuario.Reset_pass, Converter={localConv:BooleanConverter}}" HorizontalAlignment="Center" Margin="10,0,10,0"  VerticalAlignment="Top"  IsEnabled="{cbind:Binding !BIsReadOnly}" />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Reset_pass}"  Margin="0,0,0,0"/>
                                                    </StackPanel>


                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.2*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Activo*" HorizontalAlignment="Center" />
                                                        <CheckBox x:Name="Activo"  IsChecked="{Binding Usuario.Activo, Converter={localConv:BooleanConverter}}" HorizontalAlignment="Center" Margin="10,0,10,0"  VerticalAlignment="Top"  IsEnabled="{cbind:Binding !BIsReadOnly}" />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Activo}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.8*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Vigencia" />
                                                        <DatePicker x:Name="Vigencia" HorizontalAlignment="Left" Margin="78,0,0,0"  VerticalAlignment="Top" SelectedDate="{Binding Converter={StaticResource DateTimeOffsetToDateTimeConverter}, Path=Usuario.Vigencia}"  />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Vigencia}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=2.4*x/12.5}"  Height="65"  >

                                                        <Button MinWidth="120" Margin="6" Padding="6"
                                                                           x:Name="Cambiocontrasena" Content="Cambiar contrase&#x00f1;a" IsEnabled="{cbind:Binding !BIsReadOnly}" Background="LightGray"/>

                                                    </StackPanel>


                                                </WrapPanel>
                                            </Border>
                                        </StackPanel>
                                    </WrapPanel>


                                    <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}">
                                        <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,0">
                                            <TextBlock  FontWeight="Medium"  HorizontalAlignment="Stretch"  VerticalAlignment="Top">Configuraciones</TextBlock>
                                            <Border BorderThickness="0,2,0,0" BorderBrush="LightBlue"  >
                                                <WrapPanel Margin="0,10,0,0">


                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.8*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Lista precio maxima" />
                                                        <ComboBox  x:Name="Usuario_Preferencias_Listaprecioid" 
			ItemsSource="{Binding Catalogs[Tipoprecio]}"
                        
                        SelectedValuePath="Id"
                        SelectedValue="{Binding Usuario.Usuario_Preferencias_Listaprecioid}"
                        DisplayMemberPath="Nombre"
 			IsReadOnly="{Binding BIsReadOnly}" />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Usuario_Preferencias_Listaprecioid}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.8*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Dias de ventas pendientes*" />
                                                        <Syncfusion:IntegerTextBox x:Name="PendMaxDias"  HorizontalAlignment="Stretch"  Margin="10,0,10,0" MinWidth="100" NumberGroupSeparator=","  TextWrapping="Wrap"  VerticalAlignment="Top" Value="{Binding Usuario.PendMaxDias}"  IsScrollingOnCircle="False" IsReadOnly="{Binding BIsReadOnly}" />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=PendMaxDias}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=2.4*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Almacen" />
                                                        <WrapPanel>
                                                            <TextBox x:Name="Usuario_Preferencias_AlmacenClave" Text="{Binding Usuario.Usuario_Preferencias_AlmacenClave}" Margin="5,0,5,0"  HorizontalAlignment="Left" Width="50"   IsReadOnly="{Binding BIsReadOnly}" />
                                                            <TextBox x:Name="Usuario_Preferencias_AlmacenNombre" Text="{Binding Usuario.Usuario_Preferencias_AlmacenNombre}" Margin="10,0,10,0"  HorizontalAlignment="Left" Width="100"  IsReadOnly="True" />
                                                            <Button  x:Name="Usuario_Preferencias_AlmacenidButton" VerticalAlignment="Top" Margin="5,0,5,0" cal:Message.Attach="[Event Click] = [Action ShowPopUpSelector('Usuario_Preferencias_AlmacenClave')]"  Width="24"  Height="24" Visibility="{cbind:Binding Path=!BIsReadOnly}"  Style="{StaticResource MaterialDesignIconButton}">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Binoculars"/>
                                                                </StackPanel>
                                                            </Button>
                                                        </WrapPanel>
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Usuario_Preferencias_AlmacenClave}"  Margin="0,0,0,0"/>
                                                    </StackPanel>


                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.2*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Cajas/botellas*" HorizontalAlignment="Center" />
                                                        <CheckBox x:Name="Cajasbotellas"  IsChecked="{Binding Usuario.Cajasbotellas, Converter={localConv:BooleanConverter}}" HorizontalAlignment="Center" Margin="10,0,10,0"  VerticalAlignment="Top"  IsEnabled="{cbind:Binding !BIsReadOnly}" />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Cajasbotellas}"  Margin="0,0,0,0"/>
                                                    </StackPanel>
 
                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=2.4*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Formas de pago def. clientes creados" />
                                                        <!--<TextBox x:Name="Clieformaspagodef" Text="{Binding Usuario.Clieformaspagodef}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />-->

                                                        <localCont:MultiSelectComboBox 
                                                                    ItemsSource="{Binding FormasPagoItems}" 
                                                                    SelectedItems="{Binding SelectedFormasPagoItems}" 
                                                                    x:Name="Clieformaspagodef_1" />

                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Clieformaspagodef}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.2*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Es vendedor*" HorizontalAlignment="Center" />
                                                        <CheckBox x:Name="Esvendedor"  IsChecked="{Binding Usuario.Esvendedor, Converter={localConv:BooleanConverter}}" HorizontalAlignment="Center" Margin="10,0,10,0"  VerticalAlignment="Top"  IsEnabled="{cbind:Binding !BIsReadOnly}" />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Esvendedor}"  Margin="0,0,0,0"/>
                                                    </StackPanel>


                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.8*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Es encargado corte*" HorizontalAlignment="Center" />
                                                        <CheckBox x:Name="Esencargadocorte"  IsChecked="{Binding Usuario.Esencargadocorte, Converter={localConv:BooleanConverter}}" HorizontalAlignment="Center" Margin="10,0,10,0"  VerticalAlignment="Top"  IsEnabled="{cbind:Binding !BIsReadOnly}" />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Esencargadocorte}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=1.8*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Es encargado guia*" HorizontalAlignment="Center" />
                                                        <CheckBox x:Name="Esencargadoguia"  IsChecked="{Binding Usuario.Esencargadoguia, Converter={localConv:BooleanConverter}}" HorizontalAlignment="Center" Margin="10,0,10,0"  VerticalAlignment="Top"  IsEnabled="{cbind:Binding !BIsReadOnly}" />
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Esencargadoguia}"  Margin="0,0,0,0"/>
                                                    </StackPanel>


                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=2.4*x/12.5}"  Height="65"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Grupo usuario" />
                                                        <WrapPanel>
                                                            <TextBox x:Name="Usuario_Preferencias_GrupousuarioClave" Text="{Binding Usuario.Usuario_Preferencias_GrupousuarioClave}" Margin="5,0,5,0"  HorizontalAlignment="Left" Width="50"   IsReadOnly="{Binding BIsReadOnly}" />
                                                            <TextBox x:Name="Usuario_Preferencias_GrupousuarioNombre" Text="{Binding Usuario.Usuario_Preferencias_GrupousuarioNombre}" Margin="10,0,10,0"  HorizontalAlignment="Left" Width="100"  IsReadOnly="True" />
                                                            <Button  x:Name="Usuario_Preferencias_GrupousuarioidButton" VerticalAlignment="Top" Margin="5,0,5,0" cal:Message.Attach="[Event Click] = [Action ShowPopUpSelector('Usuario_Preferencias_GrupousuarioClave')]"  Width="24"  Height="24" Visibility="{cbind:Binding Path=!BIsReadOnly}"  Style="{StaticResource MaterialDesignIconButton}">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Binoculars"/>
                                                                </StackPanel>
                                                            </Button>
                                                        </WrapPanel>
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Usuario_Preferencias_GrupousuarioClave}"  Margin="0,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=2.4*x/12.5}"  Height="75"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Emida Clerk Pago Servicios" />
                                                        <WrapPanel>
                                                            <TextBox x:Name="Usuario_emida_ClerkpagoserviciosClave" Text="{Binding Usuario.Usuario_emida_ClerkpagoserviciosClave}" Margin="5,0,5,0"  HorizontalAlignment="Left" Width="50"   IsReadOnly="{Binding BIsReadOnly}" />
                                                            <TextBox x:Name="Usuario_emida_ClerkpagoserviciosNombre" Text="{Binding Usuario.Usuario_emida_ClerkpagoserviciosNombre}" Margin="10,0,10,0"  HorizontalAlignment="Left" Width="100"  IsReadOnly="True" />
                                                            <Button  x:Name="Usuario_emida_ClerkpagoserviciosidButton" VerticalAlignment="Top" Margin="5,0,5,0" cal:Message.Attach="[Event Click] = [Action ShowPopUpSelector('Usuario_emida_ClerkpagoserviciosClave')]"  Width="24"  Height="24" Visibility="{cbind:Binding Path=!BIsReadOnly}"  Style="{StaticResource MaterialDesignIconButton}">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Binoculars"/>
                                                                </StackPanel>
                                                            </Button>
                                                        </WrapPanel>
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Usuario_emida_ClerkpagoserviciosClave}"  Margin="0,0,0,0"/>
                                                    </StackPanel>


                                                    <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="75"  >
                                                        <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Emida Clerk" />
                                                        <WrapPanel>
                                                            <TextBox x:Name="Usuario_emida_Clerkservicios_Clave" Text="{Binding Usuario.Usuario_emida_Clerkservicios_Clave}" Margin="5,0,5,0"  HorizontalAlignment="Left" Width="50"   IsReadOnly="{Binding BIsReadOnly}" />
                                                            <TextBox x:Name="Usuario_emida_Clerkservicios_Nombre" Text="{Binding Usuario.Usuario_emida_Clerkservicios_Nombre}" Margin="10,0,10,0"  HorizontalAlignment="Left" Width="100"  IsReadOnly="True" />
                                                            <Button  x:Name="Usuario_emida_ClerkserviciosButton" VerticalAlignment="Top" Margin="5,0,5,0" cal:Message.Attach="[Event Click] = [Action ShowPopUpSelector('Usuario_emida_Clerkservicios_Clave')]"  Width="24"  Height="24" Visibility="{cbind:Binding Path=!BIsReadOnly}"  Style="{StaticResource MaterialDesignIconButton}">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Binoculars"/>
                                                                </StackPanel>
                                                            </Button>
                                                        </WrapPanel>
                                                        <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Usuario_emida_Clerkservicios_Clave}"  Margin="0,0,0,0"/>
                                                    </StackPanel>




                                                </WrapPanel>
                                            </Border>
                                        </StackPanel>
                                    </WrapPanel>




                                    <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=6.2*x/12.5}">
                                        <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,0">
                                            <TextBlock  FontWeight="Medium"  HorizontalAlignment="Stretch"  VerticalAlignment="Top">Perfiles</TextBlock>
                                            <Border BorderThickness="0,2,0,0" BorderBrush="LightBlue"  >
                                                <WrapPanel Margin="0,10,0,0">

                                                    <Syncfusion:SfDataGrid x:Name="SfPerfilUsuarioDataGridView" 
                      ItemsSource="{Binding UsuarioPerfilItems}" 
                       AllowFiltering="True"
                       AllowEditing="True"
                      Margin="2,2,2,2"  AutoGenerateColumns="False" Background="#FFFFFFFF" IsReadOnly="False"  RowHeight="35" HorizontalAlignment="Left"   
                                   MinWidth="100" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=x}"
                        Height="150"  >
