
<UserControl
        x:Class="IposV3.Views.CajaAddEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cal="http://www.caliburnproject.org"
        xmlns:Syncfusion="http://schemas.syncfusion.com/wpf" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:cbind="clr-namespace:CalcBinding;assembly=CalcBinding"
        xmlns:local="clr-namespace:IposV3"
            xmlns:localCommon="clr-namespace:UICommon;assembly=UICommon"
        xmlns:localCont="clr-namespace:Controls;assembly=UICommon"
        xmlns:localConv="clr-namespace:Converters;assembly=UICommon"
        xmlns:ac="clr-namespace:AdornedControl;assembly=AdornedControl"
        mc:Ignorable="d"  
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={localConv:WindowSizeConverter}, ConverterParameter='0.75'}" 
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={localConv:WindowSizeConverter}, ConverterParameter='0.75'}"
        >
    <UserControl.Resources>
        <localConv:DecimalNullableConverter x:Key="DecimalNullableConverter"/>
        <localConv:IntNullableConverter x:Key="IntNullableConverter"/>
        <localConv:DateTimeOffsetToDateTimeConverter x:Key="DateTimeOffsetToDateTimeConverter"/>
    </UserControl.Resources>


    <ScrollViewer   Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={localConv:WindowSizeConverter}, ConverterParameter='0.73'}"
                HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Padding="20,20,20,20" Margin="0 0 0 0 "  IsEnabled="{cbind:Binding Path=!IsBusy}" Opacity="{Binding Opacity}">
        <WrapPanel Name="MainPanel"  HorizontalAlignment="Stretch"  VerticalAlignment="Top"  >
            <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=x}"  Height="5"  >
                <localCont:MessageBoxV2 MessageToUser="{Binding MessageToUser}"  Width="10"  HorizontalAlignment="Right"/>
            </StackPanel>



            <ac:AdornedControl  IsAdornerVisible="{Binding IsBusy}">
             <ac:AdornedControl.AdornerContent>
                    <localCont:LoadingWait></localCont:LoadingWait>
             </ac:AdornedControl.AdornerContent>
             <WrapPanel  HorizontalAlignment="Stretch"  VerticalAlignment="Top"  IsEnabled="{cbind:Binding Path=!IsBusy}">


              <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}">

                <Button  x:Name="Back" Style="{StaticResource MaterialDesignIconButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowLeft"/>
                    </StackPanel>
                </Button>
                <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}">Caja</TextBlock>
              </WrapPanel>


              <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}">
                <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,20">
		<TextBlock Style="{StaticResource MaterialDesignHeadlineGroupBlock}" FontWeight="Medium"  HorizontalAlignment="Stretch"  VerticalAlignment="Top">General</TextBlock>
                    <Border BorderThickness="0,2,0,0" BorderBrush="LightBlue"  >
                        <WrapPanel Margin="0,10,0,0">

              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="65"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Activo*" HorizontalAlignment="Center" />
            	<CheckBox x:Name="Activo"  IsChecked="{Binding Caja.Activo, Converter={localConv:BooleanConverter}}" HorizontalAlignment="Center" Margin="10,0,10,0"  VerticalAlignment="Top"  IsEnabled="{cbind:Binding !BIsReadOnly}" />
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Activo}"  Margin="0,0,0,0"/>
              </StackPanel>
        
              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="65"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Clave*" />
            	<TextBox x:Name="Clave" Text="{Binding Caja.Clave}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Clave}"  Margin="0,0,0,0"/>
              </StackPanel>
        
              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=6*x/12.5}"  Height="65"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Nombre*" />
            	<TextBox x:Name="Nombre" Text="{Binding Caja.Nombre}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Nombre}"  Margin="0,0,0,0"/>
              </StackPanel>
        
              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=9*x/12.5}"  Height="65"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Descripcion*" />
            	<TextBox x:Name="Descripcion" Text="{Binding Caja.Descripcion}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Descripcion}"  Margin="0,0,0,0"/>
              </StackPanel>

                        </WrapPanel>
                    </Border>
                </StackPanel>
              </WrapPanel>

              <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}">
                <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,20">
		<TextBlock Style="{StaticResource MaterialDesignHeadlineGroupBlock}" FontWeight="Medium"  HorizontalAlignment="Stretch"  VerticalAlignment="Top">Impresion</TextBlock>
                    <Border BorderThickness="0,2,0,0" BorderBrush="LightBlue"  >
                        <WrapPanel Margin="0,10,0,0">
        
              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="65"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Nombre impresora" />
            	<TextBox x:Name="Nombreimpresora" Text="{Binding Caja.Nombreimpresora}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Nombreimpresora}"  Margin="0,0,0,0"/>
              </StackPanel>
        
              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="65"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Impresora comanda" />
            	<TextBox x:Name="Impresoracomanda" Text="{Binding Caja.Impresoracomanda}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Impresoracomanda}"  Margin="0,0,0,0"/>
              </StackPanel>

                        </WrapPanel>
                    </Border>
                </StackPanel>
              </WrapPanel>

              <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}">
                <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,20">
		<TextBlock Style="{StaticResource MaterialDesignHeadlineGroupBlock}" FontWeight="Medium"  HorizontalAlignment="Stretch"  VerticalAlignment="Top">Emida</TextBlock>
                    <Border BorderThickness="0,2,0,0" BorderBrush="LightBlue"  >
                        <WrapPanel Margin="0,10,0,0">

              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="75"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Emida Terminal" />
		<WrapPanel>
			<TextBox x:Name="Caja_emida_TerminalClave" Text="{Binding Caja.Caja_emida_TerminalClave}" Margin="10,0,10,0"  HorizontalAlignment="Left" Width="50"   IsReadOnly="{Binding BIsReadOnly}" />
			<TextBox x:Name="Caja_emida_TerminalNombre" Text="{Binding Caja.Caja_emida_TerminalNombre}" Margin="10,0,10,0"  HorizontalAlignment="Left" Width="100"  IsReadOnly="True" />
            		<Button  x:Name="Caja_emida_TerminalidButton" VerticalAlignment="Top" Margin="10,0,10,0" cal:Message.Attach="[Event Click] = [Action ShowPopUpSelector('Caja_emida_TerminalClave')]"  Width="24"  Height="24" Visibility="{cbind:Binding Path=!BIsReadOnly}"  Style="{StaticResource MaterialDesignIconButton}">
                               <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Binoculars"/>
                               </StackPanel>
                    </Button>
		</WrapPanel>
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Caja_emida_TerminalClave}"  Margin="0,0,0,0"/>
              </StackPanel>

              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="75"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Emida Terminal Servicios" />
		<WrapPanel>
			<TextBox x:Name="Caja_emida_TerminalserviciosClave" Text="{Binding Caja.Caja_emida_TerminalserviciosClave}" Margin="10,0,10,0"  HorizontalAlignment="Left" Width="50"   IsReadOnly="{Binding BIsReadOnly}" />
			<TextBox x:Name="Caja_emida_TerminalserviciosNombre" Text="{Binding Caja.Caja_emida_TerminalserviciosNombre}" Margin="10,0,10,0"  HorizontalAlignment="Left" Width="100"  IsReadOnly="True" />
            		<Button  x:Name="Caja_emida_TerminalserviciosidButton" VerticalAlignment="Top" Margin="10,0,10,0" cal:Message.Attach="[Event Click] = [Action ShowPopUpSelector('Caja_emida_TerminalserviciosClave')]"  Width="24"  Height="24" Visibility="{cbind:Binding Path=!BIsReadOnly}"  Style="{StaticResource MaterialDesignIconButton}">
                               <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Binoculars"/>
                               </StackPanel>
                    </Button>
		</WrapPanel>
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Caja_emida_TerminalserviciosClave}"  Margin="0,0,0,0"/>
              </StackPanel>

                        </WrapPanel>
                    </Border>
                </StackPanel>
              </WrapPanel>

              <WrapPanel Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=12.5*x/12.5}">
                <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,20">
		<TextBlock Style="{StaticResource MaterialDesignHeadlineGroupBlock}" FontWeight="Medium"  HorizontalAlignment="Stretch"  VerticalAlignment="Top">Bancomer</TextBlock>
                    <Border BorderThickness="0,2,0,0" BorderBrush="LightBlue"  >
                        <WrapPanel Margin="0,10,0,0">
        
              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="65"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Nombre certificado bancomer" />
            	<TextBox x:Name="Caja_bancomer_Nombrecertificadobancomer" Text="{Binding Caja.Caja_bancomer_Nombrecertificadobancomer}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Caja_bancomer_Nombrecertificadobancomer}"  Margin="0,0,0,0"/>
              </StackPanel>
        
              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="65"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Afiliacion bancomer" />
            	<TextBox x:Name="Caja_bancomer_Afiliacionbancomer" Text="{Binding Caja.Caja_bancomer_Afiliacionbancomer}" Margin="10,0,10,0"  IsReadOnly="{Binding BIsReadOnly}"  />
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Caja_bancomer_Afiliacionbancomer}"  Margin="0,0,0,0"/>
              </StackPanel>

              <StackPanel MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=3*x/12.5}"  Height="65"  >
                <Label Style="{DynamicResource LabelFieldFormTemplate}" Margin="10,0,10,0"  Content="Numero terminal bancomer" />
            	<Syncfusion:IntegerTextBox x:Name="Caja_bancomer_Numeroterminalbancomer"  HorizontalAlignment="Stretch"  Margin="10,0,10,0" MinWidth="100" NumberGroupSeparator=","  TextWrapping="Wrap"  VerticalAlignment="Top" Value="{Binding Caja.Caja_bancomer_Numeroterminalbancomer}"  IsScrollingOnCircle="False" IsReadOnly="{Binding BIsReadOnly}" />
                <TextBlock Style="{DynamicResource TextErrorStyleTemplate}"  Text="{Binding (Validation.Errors), Converter={localConv:ValidationErrorConverter}, ConverterParameter=0, ElementName=Caja_bancomer_Numeroterminalbancomer}"  Margin="0,0,0,0"/>
              </StackPanel>

                        </WrapPanel>
                    </Border>
                </StackPanel>
              </WrapPanel>
          
              <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="6" MinWidth="110" Width="{Binding ElementName=MainPanel, Path=ActualWidth, Converter={localConv:MathConverter}, ConverterParameter=x}">
                <Rectangle  Width="120"/>
                <Rectangle  Width="120"/>
                <Button MinWidth="120" Margin="6" Padding="6"
                    x:Name="Accept" Content="Ok" IsEnabled="{cbind:Binding !Caja.HasErrors}" Foreground="WhiteSmoke"/>
                <Rectangle  Width="120"/>
                <Button MinWidth="120" Margin="6" Padding="6"
                    x:Name="Cancel"
                    Content="Cancelar" Visibility="{cbind:Binding Path=!BIsReadOnly}" Background="LightGray"/>
                
               </WrapPanel>

             </WrapPanel>
            </ac:AdornedControl>

        </WrapPanel>
    </ScrollViewer>
</UserControl>

